{
    "name": "retropak",
    "description": "Metadata specification for Retropak software containers",
    "private": true,
    "type": "module",
    "workspaces": [
        "packages/schema",
        "packages/types"
    ],
    "scripts": {
        "sync": "scripts/sync-schema.sh",
        "presync": "echo '⚠️  Remember: packages/schema/ is the source of truth'",
        "build": "npm run sync && npm run build --workspaces",
        "test": "npm run test --workspaces --if-present",
        "validate": "npm run validate --workspaces --if-present",
        "validate:sync": "scripts/validate-sync.sh"
    },
    "keywords": [
        "retropak",
        "schema"
    ],
    "author": "piers@retropak.org",
    "license": "CC0-1.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/piersroberts/retropak.git"
    },
    "bugs": {
        "url": "https://github.com/piersroberts/retropak/issues"
    },
    "homepage": "https://retropak.org",
    "devDependencies": {
        "ajv": "^8.12.0"
    }
}